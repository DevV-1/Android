<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ratings2">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quality"
        android:textSize="30sp"
        />

    <RatingBar
        android:id="@+id/simpleRatingBar1"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_below="@+id/simpleRatingBar5"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="28dp"
        android:layout_toEndOf="@+id/tv2"
        android:layout_toRightOf="@+id/tv1"
        android:numStars="5"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:rating="1.5"
        android:stepSize="0.1" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1"
        android:layout_marginTop="28dp"
        android:text="Quantity"
        android:textSize="30sp" />

    <RatingBar
        android:id="@+id/simpleRatingBar2"
        style="@style/Widget.AppCompat.RatingBar.Indicator"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="-19dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="412dp"
        android:layout_toRightOf="@+id/tv2"
        android:isIndicator="true"
        android:numStars="5"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:rating="0" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv2"
        android:layout_marginTop="33dp"
        android:text="ordering"
        android:textSize="30sp" />

    <RatingBar
        android:id="@+id/simpleRatingBar3"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_alignStart="@+id/simpleRatingBar1"
        android:layout_alignTop="@+id/simpleRatingBar1"
        android:layout_marginStart="51dp"
        android:layout_marginLeft="57dp"
        android:layout_marginTop="143dp"
        android:layout_toRightOf="@+id/tv3"
        android:numStars="5"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:rating="1.5" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv3"
        android:layout_marginTop="28dp"
        android:text="delivery time"
        android:textSize="30sp" />

    <RatingBar
        android:id="@+id/simpleRatingBar4"
        android:layout_width="260dp"
        android:layout_height="41dp"
        android:layout_below="@+id/simpleRatingBar5"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="-44dp"
        android:layout_marginTop="100dp"
        android:layout_toEndOf="@+id/tv5"
        android:layout_toRightOf="@+id/tv4"
        android:numStars="5"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:rating="1.5" />

    <TextView
        android:id="@+id/tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv4"
        android:layout_marginTop="31dp"
        android:text="Overall"
        android:textSize="30sp" />

    <RatingBar
        android:id="@+id/simpleRatingBar5"
        android:layout_width="254dp"
        android:layout_height="43dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="-2dp"
        android:layout_toEndOf="@+id/tv1"
        android:numStars="5"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:rating="1.5" />

    <Button
        android:id="@+id/sumbitButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:text="SUBMIT" />


</RelativeLayout>